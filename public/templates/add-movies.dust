{>"layouts/master" /}

{<body}
    <div>
      <a href="/movies">Go back</a>
      <h2>Add movie</h2>
      <form action="/movies/add" method="POST">
        <div>
          <label for="title">Title
            <input required type="text" name="title" placeholder="The Godfather">
          </label>
        </div>
        <div>
          <label for="director">Director
            <input required type="text" name="director" placeholder="Francis Ford Coppola">
          </label>
        </div>
        <div>
          <label for="release_date">Release year
            <input required type="number" name="release_date">
          </label>
        </div>
        <div>
          <label for="genre">Genre
            <select required name="genre" id="genre">
              <option value="Action">Action</option>
              <option value="Comedy">Comedy</option>
              <option value="Drama">Drama</option>
              <option value="Documentary">Documentary</option>
              <option value="Horror">Horror</option>
              <option value="Thriller">Thriller</option>
              <option value="Other">Other</option>
            </select>
          </label>
        </div>
        <div>
          <label for="plot">Plot
            <textarea required name="plot" id="plot" cols="30" rows="5"></textarea>
          </label>
        </div>
        <div>
          <label for="cover">Cover URL
            <input type="text" name="cover" placeholder="Image URL">
          </label>
        </div>
        <div>
          <label for="trailer">YouTube trailer code
            <input type="text" name="trailer" placeholder="">
          </label>
        </div>
        <button type="submit">Add movie!</button>
      </form>
    </div>
{/body}
